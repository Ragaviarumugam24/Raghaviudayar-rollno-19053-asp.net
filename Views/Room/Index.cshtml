@model List<HotelApp.Models.Room>
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/bootstrap.min.css">

<div class="container mt-4">
    <h1>Rooms</h1>
    <a class="btn btn-primary mb-3" href="/Room/Create">Add Room</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Number</th>
                <th>Type</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Id</td>
                    <td>@room.Number</td>
                    <td>@room.Type</td>
                    <td>@(room.IsAvailable ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-sm btn-warning" href="/Room/Edit/@room.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Room/Delete/@room.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
