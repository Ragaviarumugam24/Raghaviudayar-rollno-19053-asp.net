@model List<SimpleHotelApp.Models.Booking>
@using SimpleHotelApp.Services
@{
    Layout = "_Layout";
}

@inject SimpleHotelApp.Services.RoomService RoomService
@inject SimpleHotelApp.Services.GuestService GuestService
<link rel="stylesheet" href="~/css/bootstrap.min.css">

<div class="container mt-4">
    <h1>Bookings</h1>
    <a class="btn btn-primary mb-3" href="/Booking/Create">Add Booking</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Room</th>
                <th>Guest</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                var room = RoomService.Get(booking.RoomId);
                var guest = GuestService.Get(booking.GuestId);
                <tr>
                    <td>@booking.Id</td>
                    <td>@room?.Number</td>
                    <td>@guest?.Name</td>
                    <td>@booking.CheckIn.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(booking.CheckOut.HasValue? booking.CheckOut.Value.ToString("dd/MM/yyyy HH:mm") : "Not yet")</td>
                    <td>
                        @if (!booking.CheckOut.HasValue)
                        {
                            <a class="btn btn-sm btn-success" href="/Booking/CheckOut/@booking.Id">Check Out</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
