@model List<HotelApp.Models.Booking>

@inject HotelApp.Services.RoomService RoomService
@inject HotelApp.Services.GuestService GuestService

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/bootstrap.min.css">

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Bookings</h2>
        <a class="btn btn-primary" asp-controller="Booking" asp-action="Create">Add Booking</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Room</th>
                <th>Guest</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th width="120px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                var room = RoomService.Get(booking.RoomId);
                var guest = GuestService.Get(booking.GuestId);

                <tr>
                    <td>@booking.Id</td>
                    <td>@room?.Number ?? "N/A"</td>
                    <td>@guest?.Name ?? "N/A"</td>
                    <td>@booking.CheckIn.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @(booking.CheckOut.HasValue
                            ? booking.CheckOut.Value.ToString("dd/MM/yyyy HH:mm")
                            : "Not yet")
                    </td>
                    <td>
                        @if (!booking.CheckOut.HasValue)
                        {
                            <a class="btn btn-sm btn-success"
                               asp-controller="Booking"
                               asp-action="CheckOut"
                               asp-route-id="@booking.Id">
                                Check Out
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Completed</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
